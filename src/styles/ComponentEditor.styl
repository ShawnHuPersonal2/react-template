@import 'nib/vendor'
@import 'nib/positions'
@import 'nib/overflow'
@import 'nib/gradients'

.component-editor
  .editor-styles
    .tab-content
      padding-top 1em
    .border-radius
      .unit
        .types
          display inline-block; margin-left 2em
          &>div
            display inline-block; margin-right:1em
      .quick
        .ratio
          .types
            &>div
              display inline-block; margin-right:1em
            input
              top 1em
      .advanced
        .border-radius-separated
          &>div
            margin-bottom 1em;
  .editor-background
    position relative; margin 5px; border solid 1px transparent //it's wired that without this border the position&height will be quite different
    &:before
      content: ""; display: block; margin-top: 100%;
    .wrapper
      position absolute; top 0; left 0; width 100%; height 100%
