@import 'nib/vendor'
@import 'nib/positions'
@import 'nib/overflow'
@import 'nib/gradients'

$phone-header-height ?=       25px
$wechat-header-height ?=       50px

.phonesimulator
  .wrapper
    relative: 0 0
    margin auto
    .header
      .phone-header
        height $phone-header-height
        background #aaa
        opacity: 0.5
      .wechat-header
        height $wechat-header-height
        background #000
        opacity: 0.5
    .content
      position relative
      width 100%
      height calc(100% - 75px)
      background #aaa
      .grid
        height 100%
        position absolute
        left 0, top 0
        .col-xs-1
          opacity: 0
          height 100%
          background linear-gradient(left, #eee, 20% steelblue, 80% steelblue, #eee)
